<div class="container">
	<div class="row">
		<div class="col">
			<p id="notice"><%= notice %></p>

			<div class="row">
				<div class="col-12 mt-5 mb-5">
					<%= render 'form', todo: @todo %>
				</div>
			</div>

			<div class="row">
				<div class="col-12 mb-3">
					<h4>Your Todos</h4>
				</div>

				<div class="col-12">
			  	<% if @todos.incomplete.any? %>
				    <% @todos.incomplete.each do |todo| %>
				      <%= render "todo", todo: todo %>
				    <% end %>
			    <% end %>
				</div>

				<div class="col-12">
					<hr class="dashed mb-4" />
				</div>

				<div class="col-12">
					<% @todos.complete.each do |todo| %>
					  <%= render "todo", todo: todo %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
